@using System.Threading.Tasks
@using Newtonsoft.Json
@model IEnumerable<Pinch.SDK.Events.Event>

<h2>Events</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Type</th>
            <th>Event Date</th>
            <th>Metadata</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evt in Model)
        {
            <tr>
                <td><a href="@Url.Action("Details", "Events", new { id = evt.Id })">@evt.Id</a></td>
                <td>@evt.Type</td>
                <td>@evt.EventDate</td>
                <td>@JsonConvert.SerializeObject(evt.Metadata)</td>
            </tr>
        }
    </tbody>
</table>